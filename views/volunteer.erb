<h1>Volunteer: <%= @volunteer.name %></h1><br>

<h2>Curretnly Assigned to:</h2><br>
<h2><%= Project.find(@volunteer.id).title%></h2><br>

<form action="/volunteer/<%= @volunteer.id %>" method="post">
  <div class="form-group">
    <label for="project_id">Assign to Project</label>
    <select class="form-control" name='project_id' type='text'>
      <% @projects.each() do |project| %>
        <option value="<%= project.id %>"> <%= project.title %> </option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Join the Project</button>

</form>
