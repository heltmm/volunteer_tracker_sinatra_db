
  <h1><%= @project.title %></h1>
  <div class="row">
    <form action="/project/delete/<%=@project.id%>" method="post">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <form action="/project/update/<%=@project.id%>" method="post">
      <input type="text" name="title">
      <button type="submit" class="btn btn-warning">Update</button>
    </form>
  </div>
  <h2>Volunteers:</h2>
  <ol>
    <% @project.volunteers.each do |volunteer| %>
      <a href="/volunteer/<%= volunteer.id %>"><li><%= volunteer.name %></li></a>
    <% end %>
  </ol>
